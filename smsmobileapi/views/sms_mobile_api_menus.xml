<odoo>
    <data>
        <!-- Action : Config API (listing + formulaire) -->
        <record id="sms_mobile_api_action" model="ir.actions.act_window">
            <field name="name">SMS Mobile API</field>
            <field name="res_model">sms.mobile.api</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="context">{}</field>
        </record>

        <!-- Action : Log SMS (listing + formulaire) -->
        <record id="sms_mobile_api_log_action" model="ir.actions.act_window">
            <field name="name">Log SMS</field>
            <field name="res_model">sms.mobile.api.log</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p style="color:#888; font-size: 110%;">
                    <b>The SMS log feature will be available soon.</b><br/>
                    <i>You will soon be able to see here all messages sent by SMS or WhatsApp from Odoo.</i>
                </p>
            </field>
        </record>

        <!-- Menu principal -->
       <menuitem name="SMS Mobile API" id="sms_mobile_api_menu_root" sequence="10"/>
		<menuitem name="API Configuration"
				  id="sms_mobile_api_connection_menu"
				  parent="sms_mobile_api_menu_root"
				  action="sms_mobile_api_action"
				  sequence="1"/>
		<menuitem name="Log SMS"
				  id="sms_mobile_api_log_menu"
				  parent="sms_mobile_api_menu_root"
				  action="sms_mobile_api_log_action"
				  sequence="2"/>
			</data>
</odoo>
