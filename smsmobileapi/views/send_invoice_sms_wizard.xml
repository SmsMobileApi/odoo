<odoo>
    <record id="view_send_invoice_sms_wizard_form" model="ir.ui.view">
        <field name="name">send.invoice.sms.wizard.form</field>
        <field name="model">sms_mobile_api.send_invoice_sms_wizard</field>
        <field name="arch" type="xml">
            <form string="Send Invoice by SMS">
                <group>
                    <field name="invoice_id" invisible="1"/>
					<label for="phone"/>
                    <field name="phone"/>
					<label for="message"/>
                    <field name="message"/>
					
					
					 <separator string="Channels"/>
                    <group col="2">
                        <field name="send_sms_x"/>
                        <field name="send_whatsapp_x"/>
                    </group>
					
					
					
                </group>
                <footer>
                    <button string="Send" type="object" name="send_sms" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
