<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form view for SMS Mobile API configuration -->
   <record id="sms_mobile_api_form" model="ir.ui.view">
            <field name="name">sms.mobile.api.form</field>
            <field name="model">sms.mobile.api</field>
            <field name="arch" type="xml">
                <form string="SMS Mobile API">
                    <sheet>
                        <notebook>
                            <!-- Tab 1: API KEY -->
                            <page string="API KEY">
                                <div>
                                    <p>
                                        <b>Welcome to SMSMobileAPI for Odoo!</b><br/>
                                        This integration allows you to send SMS messages directly from Odoo using your own mobile phone.<br/>
                                        Enter your API key below to connect your Odoo system with your mobile device and start sending SMS notifications easily.
                                    </p>
                                    <p>
                                        <b>Don't have an account yet?</b><br/>
                                        Download the SMS Mobile API app on your mobile device and create your account in seconds.<br/>
                                        <a href="https://play.google.com/store/apps/details?id=com.smsmobileapiapp" target="_blank">Download for Android</a> |
                                        <a href="https://apps.apple.com/app/id6471443966"  target="_blank" >Download for iOS</a><br/>
                                        <b>Already registered?</b> Simply <a href="https://smsmobileapi.com/connect/"  target="_blank">log in to the dashboard</a> to get your API key.
                                    </p>
                                </div>
                                <div class="smsapi-box">
                                    <group>
                                        <field name="api_key"/>
                                        <field name="phone_number"/>
                                    </group>
                                    <group>
                                        <field name="complete_url" invisible="1"/>
                                        <field name="message_status" readonly="1"/>
                                        <button type="object" string="TEST NOW" name="test_sms_button" class="o_form_button"/>
                                    </group>
                                </div>
                            </page>

                            <!-- Tab 2: Configure SMS -->
                            <page string="Configure SMS">
                                <div>
                                    <p>
                                        <b>Configure your SMS sending preferences here.</b><br/>
                                        Set default sender, templates, rules, etc.
                                    </p>
                                    <!-- Add SMS configuration fields here -->
                                </div>
                            </page>

                            <!-- Tab 3: Configure WhatsApp -->
                            <page string="Configure WhatsApp">
                                <div>
                                    <p>
                                        <b>Integrate WhatsApp for sending messages via SMSMobileAPI.</b><br/>
                                        Connect your WhatsApp account and manage related settings.
                                    </p>
                                    <!-- Add WhatsApp configuration fields here -->
                                </div>
                            </page>

                            <!-- Tab 4: Learn More -->
                            <page string="Learn More">
                                <div>
                                    <p>
                                        <b>About SMSMobileAPI</b><br/>
                                        SMSMobileAPI is an innovative platform to send SMS and WhatsApp messages using your own device.<br/>
                                        For more information, visit <a href="https://smsmobileapi.com" target="_blank">our website</a>.
                                    </p>
                                </div>
                            </page>

                            <!-- Tab 5: SMS Log -->
                            <page string="SMS Log">
                                <div>
                                    <p>
                                        <b>History of sent SMS messages</b>
                                    </p>
                                    <!-- Example: show logs with a one2many field if available -->
                                    <!-- <field name="sms_log_ids" mode="tree,kanban"/> -->
                                </div>
                            </page>

                            <!-- Tab 6: WhatsApp Log -->
                            <page string="WhatsApp Log">
                                <div>
                                    <p>
                                        <b>History of sent WhatsApp messages</b>
                                    </p>
                                    <!-- Example: show logs with a one2many field if available -->
                                    <!-- <field name="whatsapp_log_ids" mode="tree,kanban"/> -->
                                </div>
                            </page>

                            <!-- Tab 7: Need More -->
                            <page string="Need More">
                                <div>
                                    <p>
                                        <b>Need More?</b><br/>
                                        Contact our technical support via <a href="https://smsmobileapi.com/contact/" target="_blank">this form</a>.<br/>
                                        Or email us at <a href="mailto:support@smsmobileapi.com">support@smsmobileapi.com</a>
                                    </p>
                                </div>
                            </page>

                            <!-- Tab 8: Technical Support -->
                            <page string="Technical Support">
                                <div>
                                    <p>
                                        <b>Need help?</b><br/>
                                        Contact our technical support via <a href="https://smsmobileapi.com/contact/" target="_blank">this form</a>.<br/>
                                        Or email us at <a href="mailto:support@smsmobileapi.com">support@smsmobileapi.com</a>
                                    </p>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List view for SMS Mobile API (admin/future use) -->
        <record id="sms_mobile_api_list" model="ir.ui.view">
            <field name="name">sms.mobile.api.list</field>
            <field name="model">sms.mobile.api</field>
            <field name="arch" type="xml">
                <tree string="SMS Mobile API">
                    <field name="api_key"/>
                    <field name="phone_number"/>
                </tree>
            </field>
        </record>

        <!-- Action to open config view only -->
        <record id="sms_mobile_api_action" model="ir.actions.act_window">
            <field name="name">SMS Mobile API</field>
            <field name="res_model">sms.mobile.api</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Add your API configuration here to connect your Odoo with SMSMobileAPI.<br/>
                    If you already have a configuration, click to edit it.
                </p>
            </field>
        </record>

        <!-- SMSMobileAPI Tab on Contact -->
        <record id="sms_mobile_api_partner_tab" model="ir.ui.view">
            <field name="name">res.partner.form.sms_mobile_api_tab</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="SMS Mobile API">
                        <group>
                            <div>
                                <span style="color:#555;">
                                    The message will be sent via the SMSMobileAPI service using the sender's phone number.
                                </span>
                            </div>
							  <div style="margin-top: 8px;">
                            <button name="action_open_send_sms_wizard"
                                    string="Send SMS via SMSMobileAPI"
                                    type="object"
                                    class="oe_highlight"/>
									</div>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
		
		
		
		


		
		
		
		<record id="sms_mobile_api_invoice_tab" model="ir.ui.view">
    <field name="name">account.move.form.sms_mobile_api_tab</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
            <page string="SMS Mobile API">
                <group>
                    <div>
                        <span style="color:#555;">
                            Send an SMS notification to the customer about this invoice.
                        </span>
                    </div>
					  <div style="margin-top: 8px;">
                    <button name="action_open_send_sms_invoice_wizard"
                            string="Send This Invoice by SMS"
                            type="object"
                            class="oe_highlight"/>
							</div>
                </group>
            </page>
        </xpath>
    </field>
</record>

		
		
		
		
		
    </data>
</odoo>
